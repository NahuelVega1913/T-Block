   // <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.TBlock">

        <!-- Lanzador: usar nombre FQCN de la Activity principal -->
        <activity
            android:name="com.example.t_block.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TBlock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Device admin receiver: usar clase existente (corrige ortografÃ­a) -->
        <receiver
            android:name="com.example.t_block.MyDeviceAdminReciever"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true"
            android:enabled="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <!-- Activity de overlay: FQCN -->


        <!-- Accessibility service: FQCN -->
        <service
            android:name="com.example.t_block.AppMonitorService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Receiver para instalaciones: apuntar a la clase que existe -->
        <receiver
            android:name="com.example.t_block.BlockNewAppsReceiverKt"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

    </application>

</manifest>